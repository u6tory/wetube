mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .video__controls#videoControls
          .video__column
            span#jsPlayButton
              i.fas.fa-play
          .video__column
            .progress-bar
              #progress-now
          .video__column
            span.video__time
              span#currentTime 00:00:00
              span /
              span#totalTime
            span#volumeBtn.video__volumeBtn
              i.fas.fa-volume-up
          input.video__volume#jsVolume(type="range" min="0" max="1" value="0.5" step="0.1")